#!/bin/sh

echo "[*] Restoring nightly 3:00 AM reboot job..."

# Remove other test jobs
rm -f /usr/lib/micron.d/reboot-now /usr/lib/micron.d/test-job 2>/dev/null

# Write 3AM job
cat <<EOF > /usr/lib/micron.d/reboot-nightly
59 2 * * * /usr/bin/logger 'AP will reboot at 3:00 AM in 1 minute'
0 3 * * * /sbin/reboot
EOF

chmod 644 /usr/lib/micron.d/reboot-nightly

echo "[*] Restarting micrond..."
killall micrond 2>/dev/null
/usr/sbin/micrond /usr/lib/micron.d &

echo "[âœ“] Reboot job restored and scheduled for 3:00 AM."
