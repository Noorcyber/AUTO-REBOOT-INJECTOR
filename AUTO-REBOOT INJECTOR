#!/bin/sh

echo "[*] Installing test reboot job for 1:27 PM UTC..."

# Write micrond job
cat <<EOF > /usr/lib/micron.d/reboot-test
26 13 * * * /usr/bin/logger 'AP will reboot at 1:27 PM UTC in 1 minute'
27 13 * * * /sbin/reboot
EOF

echo "[✓] Job written to /usr/lib/micron.d/reboot-test"

# Restart micrond to ensure it picks up the new job
echo "[*] Restarting micrond..."
killall micrond 2>/dev/null
/usr/sbin/micrond /usr/lib/micron.d &

# Confirm running
sleep 1
if ps | grep -q '[m]icrond'; then
  echo "[✓] micrond is running and will trigger reboot at 1:27 PM UTC"
else
  echo "[✗] micrond failed to start"
fi
