#!/bin/sh

echo "[*] Scheduling reboot for 1:33 PM EST (18:33 UTC)..."

# Create micrond cron job
cat <<EOF > /usr/lib/micron.d/reboot-test
32 18 * * * /usr/bin/logger 'AP will reboot at 1:33 PM EST (18:33 UTC) in 1 minute'
33 18 * * * /sbin/reboot
EOF

echo "[✓] Job written to /usr/lib/micron.d/reboot-test"

# Restart micrond to apply new schedule
echo "[*] Restarting micrond..."
killall micrond 2>/dev/null
/usr/sbin/micrond /usr/lib/micron.d &

# Confirm micrond is running
sleep 1
if ps | grep -q '[m]icrond'; then
  echo "[✓] micrond is running and watching for 18:33 UTC"
else
  echo "[✗] micrond failed to start!"
fi
